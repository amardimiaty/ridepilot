<script type='text/javascript'>

function makeDatePickers () {
  $('input[type=text]#trip_pickup_time, input[type=text]#trip_appointment_time').datetimepicker({
        buttonImage: "<%=  image_path 'calendar-clock.png' %>",
        buttonImageOnly: true,
        constrainInput: false,
        dateFormat: 'D yy-mm-dd',
        hourGrid: 2,
        hourMax: RidePilot.business_hours.end,
        hourMin: RidePilot.business_hours.start,
        minuteGrid: 15,
        showOn: "button",
        stepHour: 1,
        stepMinute: 15,
        timeFormat: 'hh:mm tt',
  });
}

$(function(){
  makeDatePickers();
})

</script>
