<div id="page-header" class="clearfix">
  <h1>Providers</h1>
</div>

<table>
<tr>
  <th>Name</th>
  <th>Users</th>
  <th></th>
</tr>

<% @providers.each do |provider| %>
<tr>
<td><%= provider.name %></td>
<td><%= provider.users.size %></td>
<td><%= link_to "Details", provider_path(provider) %></td>
</tr>
<% end %>
</table>

<% if can? :edit, Provider %>
<p><%= link_to "New Provider", new_provider_path, :class=>'action-bttn new-provider' %></p>
<% end %>
