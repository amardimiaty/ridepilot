<div id="page-header" class="clearfix">
  <h1>Reports: Donations</h1>
</div>

<%= form_for @query, :url=>url_for(:action=>:donations), :html=>{:method=>:get} do |f| %>
  <fieldset>
    <p>
      <%= f.date_select  :start_date, :discard_day=>true %>
      <%= f.submit "Report" %>
    </p>
  </fieldset>
<% end %>

<table>
<tr>
<th>Customer</th>
<th>Total Donations</th>
</tr>

<% for customer in @customers %>
<tr>
<td><%= customer.name %></td>
<td><%= @donations_by_customer[customer] %></td>
</tr>

<% end %>

<tr>
<td>Total</td>
<td><%= @total %></td>
</tr>
</table>
